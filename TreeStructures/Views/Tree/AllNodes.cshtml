@model IEnumerable<TreeStructures.Models.NodeInfoModel>

@{
    ViewBag.Title = "All Nodes";
}
@if (TempData["Success"] != null)
{
    <h5 class="alert-success">@TempData["Success"]</h5>
}
@if (TempData["Error"] != null)
{
    <h5 class="alert-danger">@TempData["Error"]</h5>
}

<h5>Nodes List</h5>

<div>
    <a href="Tree/Create" class="btn btn-primary">
        Add new Node
    </a>

    <a href="Tree/DisplayTree" class="btn btn-primary">
        Display Tree
    </a>
</div>

<br/>

<div class="container">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">IsActive</th>
                <th scope="col">Parent Node Name</th>
                <th scope="col">Start Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @item.Name
                    </td>
                    <td width="20%">
                        @item.IsActive
                    </td>
                    <td width="25%">
                        @item.ParentNodeName
                    </td>
                    <td width="20%">
                        @item.StartDate
                    </td>
                    <td>
                        <div role="group" class="w-60 btn-group">
                            <a asp-controller="Tree" asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>&nbsp;
                            <a asp-controller="Tree" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete?');"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>